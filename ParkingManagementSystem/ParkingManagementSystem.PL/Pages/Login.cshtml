@page
@model ParkingManagementSystemPL.Pages.LoginModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>My ASP.NET Core App</title>
    <link rel="stylesheet" href="~/css/site.min.css" />  <!-- Make sure to use the correct path to your generated Tailwind CSS file -->
</head>
<body>
    <div class="w-screen h-screen bg-blue-300 flex flex-col items-center justify-center">
        <h1 class="text-white text-5xl font-semibold">Login</h1>
        <div class="pt-16">
            <p class="text-2xl text-white">Email:</p>
            <input id="email" class="w-[30vw] rounded-sm placeholder:text-gray-500 placeholder:text-xl bg-transparent border-2 border-gray-300 px-6 py-3 mt-2" placeholder="Email" />

            <p class="text-2xl text-white pt-5">Password:</p>
            <input id="password" class="w-[30vw] rounded-sm placeholder:text-gray-500 placeholder:text-xl bg-transparent border-2 border-gray-300 px-6 py-3 mt-2" placeholder="Password" />

        </div>

        <div class="pt-16">
           <button id="login" class="bg-white rounded-full w-[20vw] py-3 text-xl hover:bg-gray-200 transition duration-1000">Log in</button>
        </div>
        <a asp-page="/Register"><h1 class="underline pt-3">Don't have an account? Create one.</h1></a>
        <script src="./js/login.js"></script>
    </div>
</body>
</html>